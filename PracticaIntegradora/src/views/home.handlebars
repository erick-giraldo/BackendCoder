<div class="container-fluid padre">
  <div class="row hijo">
    <div class="col-lg-10 col-md-12 col-sm-12 main-container">
      <div class="row nosotros-contenido">
        <h1>Categorías</h1>
        <div class="productos-container">
          {{#each products}}
            <div>
              <p class="p-titulo">{{this.category}}</p>
              <p>Descubre algunos de los modelos más recientes.</p>
              <div class="card-container">
                  <div class="row productos-section">
                    <div
                      class="card col-lg-2 col-md-6 col-sm-12"
                      style="width: 20rem"
                    >
                      <img
                        src={{this.image}}
                        class="d-block w-100"
                        alt={{this.name}}
                      />
                      <div class="card-body">
                        <h5 class="card-title card-name">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <div class="card-inv">
                          <p class="card-title card-price">$ {{this.price}}</p>
                          <p class="card-title card-stock">Stock:
                            {{this.stock}}</p>
                        </div>
                        <a
                          type="button"
                          class="btn btn-outline-dark"
                          href=""
                        >Ver Detalles</a>
                      </div>
                    </div>

                  </div>
              </div>
            </div>
          {{/each}}
        </div>

      </div>
    </div>
  </div>
</div>