        <div>
            <h2>Añadir Producto</h2>

            <form id="productForm" name="productForm" onsubmit="event.preventDefault(); onSubmitForm();">
                <div class="form-group"> <!-- Full Name -->
                    <label for="full_name_id" class="control-label">Título</label>
                    <input type="text" class="form-control" id="full_name_id" name="title">
                </div>

                <div class="form-group"> <!-- Street 1 -->
                    <label for="name" class="control-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="form-group"> <!-- Street 2 -->
                    <label for="description" class="control-label">Descripción</label>
                    <input type="text" class="form-control" id="street2_id" name="description">
                </div>

                <div class="form-group"> <!-- City-->
                    <label for="image" class="control-label">Imágen</label>
                    <input type="text" class="form-control" id="image" name="image">
                </div>

                <div class="form-group"> <!-- State Button -->
                    <label for="code" class="control-label">Código</label>
                    <input type="text" class="form-control" id="code" name="code">
                </div>

                <div class="form-group"> <!-- Zip Code-->
                    <label for="stock" class="control-label">Stock</label>
                    <input type="text" class="form-control" id="stock" name="stock">
                </div>

                <div class="form-group"> <!-- Zip Code-->
                    <label for="price" class="control-label">Precio</label>
                    <input type="text" class="form-control" id="price" name="price">
                </div>

                <div class="form-group form-btn"> <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Enviar!</button>
                </div>
            </form>
        </div>
    </div>
